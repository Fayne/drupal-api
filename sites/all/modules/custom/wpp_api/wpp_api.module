    $items['admin/config/services/wpp'] = array(
        'title' => 'WPP API',
        'description' => 'Administer WPP API settings',
        'page callback' => 'drupal_get_form',
        'page arguments' => array('wpp_api_settings_form'),
        'access callback' => 'user_access',
        'access arguments' => array('Administer wpp'),
