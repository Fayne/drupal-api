        '#required' => TRUE,
        '#title' => t('Email feedback'),
        '#maxlength' => 255,
        '#size' => 120,
        '#default_value' => variable_get('wpp_api_feedback_email', 'de.feddad@gmail.com'),
        '#description' => t('Enter WPP email address that will receive users feedbacks.'),
    );

    return system_settings_form($form);
}

